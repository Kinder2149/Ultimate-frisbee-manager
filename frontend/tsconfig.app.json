{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["jasmine", "node"]
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.cy.ts",
    "cypress/**/*",
    "**/*.cy.ts",
    "node_modules/cypress/**/*"
  ]
}
