    class ApiUrlService {
        -environment: Environment
        +getUrl(endpoint: string): string
        +getTrainingsUrl(): string
        +getTagsUrl(): string
    }
    
    class LoggingInterceptor {
        +intercept(req: HttpRequest, next: HttpHandler): Observable<HttpEvent>
    }
    
    class ErrorHandlerInterceptor {
        -notificationService: NotificationService
        +intercept(req: HttpRequest, next: HttpHandler): Observable<HttpEvent>
        -getResourceName(url: string): string
    }
    
    class TrainingState {
        -trainingsSubject: BehaviorSubject<Training[]>
        -tagsSubject: BehaviorSubject<TrainingTag[]>
        +trainings$: Observable<Training[]>
        +tags$: Observable<TrainingTag[]>
        +loadTrainings(): Observable<Training[]>
        +loadTags(): Observable<TrainingTag[]>
    }
    
    class BaseModel {
