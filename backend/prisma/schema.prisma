generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  USER
  ADMIN
}

model Exercice {
  id              String                 @id @default(uuid())
  nom             String
  description     String
  imageUrl        String?
  points          String?
  materiel        String?
  notes           String?
  critereReussite String?
  variablesPlus   String                 @default("")
  variablesMinus  String                 @default("")
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  entrainements   EntrainementExercice[]
  tags            Tag[]                  @relation("ExerciseTags")

  workspaceId String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([workspaceId])
}

model Tag {
  id               String           @id @default(uuid())
  label            String
  category         String
  color            String?
  level            Int?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  entrainements    Entrainement[]   @relation("EntrainementTags")
  exercices        Exercice[]       @relation("ExerciseTags")
  situationsMatchs SituationMatch[] @relation("SituationMatchTags")

  workspaceId String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, label, category])
  @@index([createdAt])
  @@index([workspaceId])
}

model Entrainement {
  id               String                 @id @default(uuid())
  titre            String
  date             DateTime?
  imageUrl         String?
  createdAt        DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  echauffementId   String?
  situationMatchId String?
  echauffement     Echauffement?          @relation(fields: [echauffementId], references: [id])
  situationMatch   SituationMatch?        @relation(fields: [situationMatchId], references: [id])
  exercices        EntrainementExercice[]
  tags             Tag[]                  @relation("EntrainementTags")

  workspaceId String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([echauffementId])
  @@index([situationMatchId])
  @@index([createdAt])
  @@index([workspaceId])
}

model EntrainementExercice {
  id             String       @id @default(uuid())
  entrainementId String
  exerciceId     String
  ordre          Int
  duree          Int?
  notes          String?
  createdAt      DateTime     @default(now())
  entrainement   Entrainement @relation(fields: [entrainementId], references: [id], onDelete: Cascade)
  exercice       Exercice     @relation(fields: [exerciceId], references: [id], onDelete: Cascade)

  workspaceId String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([entrainementId, exerciceId])
  @@index([entrainementId])
  @@index([exerciceId])
  @@index([createdAt])
  @@index([workspaceId])
}

model Echauffement {
  id            String             @id @default(uuid())
  nom           String
  description   String?
  imageUrl      String?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  blocs         BlocEchauffement[]
  entrainements Entrainement[]

  workspaceId String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([workspaceId])
}

model BlocEchauffement {
  id             String       @id @default(uuid())
  echauffementId String
  ordre          Int
  titre          String
  repetitions    String?
  temps          String?
  informations   String?
  fonctionnement String?
  notes          String?
  createdAt      DateTime     @default(now())
  echauffement   Echauffement @relation(fields: [echauffementId], references: [id], onDelete: Cascade)

  workspaceId String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([echauffementId, ordre])
  @@index([echauffementId])
  @@index([createdAt])
  @@index([workspaceId])
}

model SituationMatch {
  id            String         @id @default(uuid())
  nom           String?
  type          String
  description   String?
  temps         String?
  imageUrl      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  entrainements Entrainement[]
  tags          Tag[]          @relation("SituationMatchTags")

  workspaceId String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([workspaceId])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  nom       String
  prenom    String?
  role      UserRole @default(USER)
  isActive  Boolean  @default(true)
  iconUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspaces WorkspaceUser[]

  @@index([createdAt])
}

model Workspace {
  id        String           @id @default(uuid())
  name      String
  isBase    Boolean          @default(false)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  members   WorkspaceUser[]
  exercices Exercice[]
  tags      Tag[]
  entrainements Entrainement[]
  entrainementExercices EntrainementExercice[]
  echauffements Echauffement[]
  blocsEchauffement BlocEchauffement[]
  situationsMatch SituationMatch[]
}

model WorkspaceUser {
  id          String    @id @default(uuid())
  workspaceId String
  userId      String
  role        String    @default("MEMBER")
  createdAt   DateTime  @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
}
